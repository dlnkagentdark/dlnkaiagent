# dLNk Telegram Bot Environment Variables
# Copy this file to .env and fill in the values

# ========================================
# REQUIRED
# ========================================

# Telegram Bot Token (get from @BotFather)
DLNK_TELEGRAM_BOT_TOKEN=your_bot_token_here

# Admin Telegram User IDs (comma-separated)
# Get your ID by sending /myid to the bot
DLNK_ADMIN_CHAT_IDS=123456789,987654321

# ========================================
# BACKEND API
# ========================================

# Backend API URL
DLNK_BACKEND_URL=http://localhost:8000

# API Key for authentication
DLNK_API_KEY=your_api_key_here

# API Timeout (seconds)
DLNK_API_TIMEOUT=30

# ========================================
# ALERTS
# ========================================

# Enable alerts (true/false)
DLNK_ALERT_ENABLED=true

# Alert severity threshold (1-4)
# 1 = Low, 2 = Medium, 3 = High, 4 = Critical
DLNK_ALERT_THRESHOLD=2

# Alert types (true/false)
DLNK_SECURITY_ALERTS=true
DLNK_LICENSE_ALERTS=true
DLNK_SYSTEM_ALERTS=true

# ========================================
# RATE LIMITING
# ========================================

# Max messages per minute per user
DLNK_RATE_LIMIT=30

# Time window in seconds
DLNK_RATE_WINDOW=60

# Cooldown after rate limit hit (seconds)
DLNK_RATE_COOLDOWN=60

# ========================================
# DATABASE
# ========================================

# Local database path (optional)
# DLNK_BOT_DB_PATH=/path/to/telegram_bot.db

# ========================================
# LOGGING
# ========================================

# Log level (DEBUG, INFO, WARNING, ERROR)
DLNK_LOG_LEVEL=INFO

# Log file path (optional)
# DLNK_LOG_FILE=/path/to/bot.log
