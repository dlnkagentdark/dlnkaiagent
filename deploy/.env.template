# dLNk IDE - Production Environment Configuration
# ================================================
# Copy this file to .env and fill in your values

# ==================== Required ====================

# Antigravity/Jetski gRPC Endpoint
ANTIGRAVITY_ENDPOINT=https://antigravity-worker.google.com/exa.language_server_pb.LanguageServerService/SendUserCascadeMessage

# ==================== Optional AI Providers ====================
# These are used as fallback when Antigravity is unavailable

# OpenAI API Key (for GPT models)
OPENAI_API_KEY=

# Google Gemini API Key
GEMINI_API_KEY=

# Groq API Key (for fast inference)
GROQ_API_KEY=

# ==================== Telegram Alerts ====================
# For security alerts and notifications

# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=

# Admin Chat ID (your Telegram user ID)
TELEGRAM_ADMIN_CHAT_ID=

# ==================== Server Configuration ====================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# License Server
LICENSE_API_HOST=0.0.0.0
LICENSE_API_PORT=8088

# AI Bridge
AI_BRIDGE_WS_HOST=0.0.0.0
AI_BRIDGE_WS_PORT=8765
AI_BRIDGE_REST_HOST=0.0.0.0
AI_BRIDGE_REST_PORT=8766

# Security Service
SECURITY_HOST=0.0.0.0
SECURITY_PORT=8089

# ==================== Database ====================

# SQLite Database Path (inside container)
DATABASE_PATH=/data/dlnk_license.db

# ==================== Security ====================

# Master Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
# IMPORTANT: Change this in production!
MASTER_SECRET=your-secret-key-here-change-in-production

# Salt for encryption (generate with: python -c "import secrets; print(secrets.token_hex(16))")
ENCRYPTION_SALT=your-salt-here-change-in-production

# JWT Secret (for session tokens)
JWT_SECRET=your-jwt-secret-here-change-in-production

# ==================== Rate Limiting ====================

# Maximum requests per minute per IP
RATE_LIMIT_PER_MINUTE=30

# Maximum requests per hour per IP
RATE_LIMIT_PER_HOUR=500

# ==================== SSL/TLS (Optional) ====================

# Enable HTTPS
ENABLE_SSL=false

# SSL Certificate paths (when ENABLE_SSL=true)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
